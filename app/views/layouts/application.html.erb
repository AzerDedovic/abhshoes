    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <% categories=Category.all %>
        <% categories.each do |f| %>
        <li class ="nav-menu"><%= link_to f.name ,{:action => 'show', :controller=>"product", :tag => f.tag }%></li> 
        
        <% end %>
      </ul>
      
      <ul class="nav navbar-nav navbar-right nav-pills" role="tablist">
        <% if signed_in? %>
          <li class ="nav-menu"><a><b> Welcome <%= @user.username %></b></a></li>
          <li class ="nav-menu"><%= link_to "LOGOUT", {:action => 'destroy', :controller=>"sessions" }%></li>
        <% else %>
          <li class ="nav-menu"><%= link_to "LOGIN", {:action => 'new', :controller=>"sessions" }%></li>
          <li class ="nav-menu"><%= link_to "REGISTER", {:action => 'new', :controller=>"users" }%></li>
        <% end %>
        <li class ="nav-menu"><a href="#" ><i class="glyphicon glyphicon-shopping-cart cart " style="margin-left:30px"></i><span class="badge" style="font-size:10px; position: inherit; top: -1px; margin-right:60px">3</span></a></li>

       
    
      </ul>
    </div><!-- /.navbar-collapse --> 
  </div>
  <div class="col-md-1">
  </div>
</div>

