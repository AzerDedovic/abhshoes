<% content_for :head do %>
<%= stylesheet_link_tag "admin.css" %> 
<% end %>
<div class="container">
	<div class="row">
		<div class="col-md-1">
		</div>
		<div class="col-md-10">
      <div class="error" style="margin-left:17px">
          <% if  @newShoes.errors.any? %>
          <h2 class="error-title">Errors:</h2>
          <ul>
            <% @newShoes.errors.full_messages.each do |message| %>
            <li>  <%= message %></li>
            <% end %>

          </ul>

          <% end %>
      </div>
			<div class="boxShoes">
			<%= form_for :createShoes, :url=>{:action => "createShoes", :controller => "admin"} do |f| %>
      
      		
      		<div>
       		<p>Name</p>
        	<div class="field delivery_field">
          	<%= f.text_field "name", class: "form-control", placeholder: "Name", autofocus: :true%>
        	</div> 
        	</div>
          </br>
          <div>
          <p>Description</p>
          <div class="field delivery_field">
            <%= f.text_area  "description", class: "form-control", placeholder: "Description...", rows: 3%>
          </div> 
          </div>

        	</br>
          <div>
          <p>Price (KM)</p>
          <div class="field delivery_field">
            <%= f.number_field "price", class: "form-control", placeholder: "Price", :step => 0.01, :min => 1%>
          </div> 
          </div>

          </br>


          <div class="form-group delivery_field">
            <p>Brand</p>
            <select class="form-control" id="brand" name="brand">
              <option value="" selected disabled>Select brand</option>
            <% @brands.each do |brand| %>
              <option><%= brand.brand %></option>
              <% end %>
            </select>

          </div>

           <div class="form-group delivery_field">
            <p>Category</p>
            <select class="form-control" id="category" name="category">
              <option value="" selected disabled>Select category</option>
            <% @categories.each do |category| %>
              <option><%= category.name %></option>
              <% end %>
            </select>

          </div>

          <div style="position: absolute; left: 485px; top: 308px;">
          <p>Link to Image</p>
          <div class="field delivery_field">
            <%= f.text_field "image", class: "form-control", placeholder: "http://"%>
          </div> 
          </div>

        	

        	
			   </div>
			
		
			<div class="btn-group" style="left: 506px; bottom: 132px;">

     			<%= link_to raw('<button type="button" class="btn btn-primary button_back" style="position: absolute; left: 120px;">Back</button>'), {:controller => "admin", :action => "shoes" } %>

		  		<%= submit_tag "Create Shoes", class: "btn btn-primary button_save_user",  id: "Create" %>
      
        		
		  	</div>
		  	<% end %>
			

		
    
        	
      		</div>
		</div>
		<div class="col-md-1">
		</div>
	</div>
</div>

