<% content_for :head do %>
<%= stylesheet_link_tag "admin.css" %> 
<% end %>
<div class="container">
	<div class="row">
		<div class="col-md-1">
		</div>
		<div class="col-md-10">
      <div class="error" style="margin-left:17px">
          <% if  @editColor.errors.any? %>
          <h2 class="error-title">Errors:</h2>
          <ul>
            <% @editColor.errors.full_messages.each do |message| %>
            <li>  <%= message %></li>
            <% end %>

          </ul>

          <% end %>
      </div>
			<div class="boxUser">
			<%= form_for :updateColor, :url=>{:action => "updateColor", :controller => "admin", :id => @editColor.id} do |f| %>
      
      	

      		<div>
       		<p>Color</p>
        	<div class="field delivery_field">
          	<%= f.text_field :color, :name => "color", class: "form-control", value: @editColor.color %>
        	</div> 
        	</div>
        	</br>
          <div>
          <p>Code</p>
          <div class="field delivery_field">
            <%= f.text_field :code, :name => "code", class: "form-control", value: @editColor.code %>
          </div> 
          </div>
          </br>

			
		
			<div class="btn-group" style="left: 455px; bottom: -118px;">

     			<%= link_to raw('<button type="button" class="btn btn-primary button_back" style="position: absolute; left: 120px;">Back</button>'), {:controller => "admin", :action => "colors" } %>

		  		<%= submit_tag "Save", class: "btn btn-primary button_save_user",  id: "Save" %>
      
        		
		  	</div>
		  	<% end %>
        	
      		</div>
		</div>
		<div class="col-md-1">
		</div>
	</div>
</div>

