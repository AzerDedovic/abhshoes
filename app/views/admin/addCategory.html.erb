<% content_for :head do %>
<%= stylesheet_link_tag "admin.css" %> 
<% end %>
<div class="container">
	<div class="row">
		<div class="col-md-1">
		</div>
		<div class="col-md-10">
      <div class="error" style="margin-left:17px">
          
      </div>
      <div class="error" style="margin-left:17px">
          <% if  @newCategory.errors.any? %>
          <h2 class="error-title">Errors:</h2>
          <ul>
            <% @newCategory.errors.full_messages.each do |message| %>
            <li>  <%= message %></li>
            <% end %>

          </ul>

          <% end %>
      </div>
			<div class="boxUser">
			<%= form_for :createCategory, :url=>{:action => "createCategory", :controller => "admin"} do |f| %>
      
      		
      		<div>
       		<p>Category Name</p>
        	<div class="field delivery_field">
          	<%= f.text_field "name", class: "form-control", placeholder: "Category Name", autofocus: :true%>
        	</div> 
        	</div>
          </br>
          <div>
          <p>Tag</p>
          <div class="field delivery_field">
            <%= f.text_field  "tag", class: "form-control", placeholder: "Tag"%>
          </div> 
          </div>
        	</br>
          

			
		
			<div class="btn-group" style="left: 455px; bottom: -107px;">

     			<%= link_to raw('<button type="button" class="btn btn-primary button_back">Back</button>'), {:controller => "admin", :action => "categories" } %>

		  		<%= submit_tag "Create", class: "btn btn-primary button_save_user",  id: "Create" %>
      
        		
		  </div>
		  	<% end %>
        	
      </div>
		</div>
		<div class="col-md-1">
		</div>
	</div>
</div>

