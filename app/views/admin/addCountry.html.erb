<% content_for :head do %>
<%= stylesheet_link_tag "admin.css" %> 
<% end %>
<div class="container">
	<div class="row">
		<div class="col-md-1">
		</div>
		<div class="col-md-10">
      <div class="error" style="margin-left:17px">
          
      </div>
      <div class="error" style="margin-left:17px">
          <% if  @newCountry.errors.any? %>
          <h2 class="error-title">Errors:</h2>
          <ul>
            <% @newCountry.errors.full_messages.each do |message| %>
            <li>  <%= message %></li>
            <% end %>

          </ul>

          <% end %>
      </div>
			<div class="boxUser">
			<%= form_for :createCountry, :url=>{:action => "createCountry", :controller => "admin"} do |f| %>
      
      		
      		<div>
       		<p>Country</p>
        	<div class="field delivery_field">
          	<%= f.text_field "country", class: "form-control", placeholder: "Country", autofocus: :true%>
        	</div> 
        	</div>
          </br>
          <div>
          <p>Delivery price (KM)</p>
          <div class="field delivery_field">
            <%= f.number_field "delivery", class: "form-control", placeholder: "Delivery price", :step => 0.01, :min => 0%>
          </div> 
          </div>
        	</br>
          

			
		
			<div class="btn-group" style="left: 455px; bottom: -122px;">

     			<%= link_to raw('<button type="button" class="btn btn-primary button_back" style="position: absolute; left: 120px;">Back</button>'), {:controller => "admin", :action => "countries" } %>

		  		<%= submit_tag "Create", class: "btn btn-primary button_save_user",  id: "Create" %>
      
        		
		  </div>
		  	<% end %>
        	
      </div>
		</div>
		<div class="col-md-1">
		</div>
	</div>
</div>

