<% content_for :head do %>
<%= stylesheet_link_tag "admin.css" %> 
<% end %>
<div class="container">
	<div class="row">
		<div class="col-md-1">
		</div>
		<div class="col-md-10">
      <div class="error" style="margin-left:17px">
          <% if  @editVariants.errors.any? %>
          <h2 class="error-title">Errors:</h2>
          <ul>
            <% @editVariants.errors.full_messages.each do |message| %>
            <li>  <%= message %></li>
            <% end %>

          </ul>

          <% end %>
      </div>
			<div class="boxUser">
			<%= form_for :updateVariants, :url=>{:action => "updateVariants", :controller => "admin"} do |f| %>
      
      		<div class="shoes-title"><%= Product.find_by(id: @product_id).name %></div>
          <div class="form-group delivery_field">
            <p>Color</p>
            <select class="form-control" id="color" name="color">
              <option value="" selected disabled>Select color</option>
            <% @colors.each do |color| %>
              <% if color.id==@editVariants.color_id %>
                <option selected><%= color.color %></option>
              <% else %>
                <option><%= color.color %></option>
              <% end %>
              <% end %>
            </select>

          </div>
          </br>

           <div class="form-group delivery_field">
            <p>Size</p>
            <select class="form-control" id="size" name="size">
              <option value="" selected disabled>Select size</option>
            <% @sizes.each do |size| %>
              <% if size.id==@editVariants.size_id %>
                <option selected><%= size.size %></option>
              <% else %>
                <option><%= size.size %></option>
              <% end %>
              <% end %>
            </select>

          </div>
      		
        	</br>
          <div>
          <p>Quantity</p>
          <div class="field delivery_field">
            <%= f.number_field :quantity, :name => "quantity", class: "form-control", placeholder: "Quantity", :step => 1, :min => 1, :value => Variant.find_by(id: @variant_id).quantity%>
          </div> 
          </div>

          </br>
          <div id="product_id" name="product_id">
          <%= f.hidden_field :product_id, :name => "product_id", class: "form-control", :value => @product_id%>
          </div> 
          <div id="variant_id" name="variant_id">
          <%= f.hidden_field :variant_id, :name => "variant_id", class: "form-control", :value => @editVariants.id%>
          </div>       	

        	
			   </div>
			
		
			<div class="btn-group" style="left: 506px; bottom: 121px;">

     			<%= link_to raw('<button type="button" class="btn btn-primary button_back" style="position: absolute; left: 120px;">Back</button>'), {:controller => "admin", :action => "viewVariants" } %>

		  		<%= submit_tag "Edit", class: "btn btn-primary button_save_user",  id: "Create" %>
      
        		
		  	</div>
		  	<% end %>
			

		
    
        	
      		</div>
		</div>
		<div class="col-md-1">
		</div>
	</div>
</div>

