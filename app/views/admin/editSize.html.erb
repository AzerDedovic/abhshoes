<% content_for :head do %>
<%= stylesheet_link_tag "admin.css" %> 
<% end %>
<div class="container">
	<div class="row">
		<div class="col-md-1">
		</div>
		<div class="col-md-10">
      <div class="error" style="margin-left:17px">
          <% if  @editSize.errors.any? %>
          <h2 class="error-title">Errors:</h2>
          <ul>
            <% @editSize.errors.full_messages.each do |message| %>
            <li>  <%= message %></li>
            <% end %>

          </ul>

          <% end %>
      </div>
			<div class="boxUser">
			<%= form_for :updateSize, :url=>{:action => "updateSize", :controller => "admin", :id => @editSize.id} do |f| %>
      
      	

      		<div>
       		<p>Size</p>
        	<div class="field delivery_field">
          	<%= f.text_field :size, :name => "size", class: "form-control", value: @editSize.size %>
        	</div> 
        	</div>
        	</br>

			
		
			<div class="btn-group" style="left: 455px; bottom: -183px;">

     			<%= link_to raw('<button type="button" class="btn btn-primary button_back" style="position: absolute; left: 120px;">Back</button>'), {:controller => "admin", :action => "sizes" } %>

		  		<%= submit_tag "Save", class: "btn btn-primary button_save_user",  id: "Save" %>
      
        		
		  	</div>
		  	<% end %>
        	
      		</div>
		</div>
		<div class="col-md-1">
		</div>
	</div>
</div>

