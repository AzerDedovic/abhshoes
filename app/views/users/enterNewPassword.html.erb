<% content_for :head do %>
<%= stylesheet_link_tag "login.css" %> 
<% end %>

<div class="container">
	
	<div class="row row-center ">
    	<div class="col-md-4">
    	</div>
  
		<div class="col-md-4">
			<%#= form_for :users, url: 'create' do |f| %>
			<%= form_for :setNewPassword, :url=>{:action => "setNewPassword", :controller => "users"} do |f| %>
			<div>
				<h2 style="text-align:left;float:left;">Set new password</h2>
      			
     			 <hr style="clear:both;"/>
    		</div>

			<div class="error">
			<% if  @user.errors.any? %>
				<h2>Errors:</h2>
				<ul>
					<% @user.errors.full_messages.each do |message| %>
					<li>  <%= message %></li>
					<% end %>

				</ul>

				<% end %>
			</div>
			

			<div class="box">
       			
				<p>PASSWORD</p>
				<div class="field">
					<%= f.password_field :password,:name => "password", class: "form-control", placeholder: "Password"%>
					
				</div> </br>
				<p>CONFIRM PASSWORD</p>
				<div class="field">
					<%= f.password_field :password_confirmation,:name => "password_confirmation", class: "form-control", placeholder: "Confirm Password"%>

					<%= f.hidden_field :confirm_token, :name => "confirm_token", :value => @confirm_token  %>
				</div> </br> 
			</div> </br>
			
				
        	<div class="field">
  				
				<%= f.submit "SUBMIT", class: "btn pull-right button-css", id: "create"%>
			</div> 
			<%end%>
			
		</div>
		<div class="col-md-4">
    	</div>
	</div>
</div>


